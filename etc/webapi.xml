<routes xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Webapi:etc/webapi.xsd">

    <!-- Category Service -->
    <route url="/V1/calcurates/categories-by-website/:websiteId" method="GET">
        <service class="Calcurates\ModuleMagento\Api\Catalog\CategoryManagementInterface" method="getTree" />
        <resources>
            <resource ref="Calcurates_ModuleMagento::api" />
        </resources>
    </route>

    <!-- Setting Service -->
    <route url="/V1/calcurates/shipping-settings/:websiteId" method="GET">
        <service class="Calcurates\ModuleMagento\Api\ConfigProviderInterface" method="getSettings" />
        <resources>
            <resource ref="Calcurates_ModuleMagento::api" />
        </resources>
    </route>

    <!-- Product Attributes Service -->
    <route url="/V1/calcurates/products/attributes" method="GET">
        <service class="Calcurates\ModuleMagento\Api\Catalog\Product\ProductAttributesListInterface" method="getItems" />
        <resources>
            <resource ref="Calcurates_ModuleMagento::api" />
        </resources>
    </route>

    <!-- Entrypoint for saving linked attributes of Volumetric Weight -->
    <route url="/V1/calcurates/system/checkout/attributes/volumetric-weight/:websiteId" method="POST">
        <service class="Calcurates\ModuleMagento\Api\System\Checkout\Attributes\DimensionsInterface" method="link" />
        <resources>
            <resource ref="Calcurates_ModuleMagento::api" />
        </resources>
    </route>

    <!-- Entrypoint for saving custom attributes -->
    <route url="/V1/calcurates/system/checkout/attributes/custom-attributes/:websiteId" method="POST">
        <service class="Calcurates\ModuleMagento\Api\System\Checkout\Attributes\CustomAttributesInterface" method="save" />
        <resources>
            <resource ref="Calcurates_ModuleMagento::api" />
        </resources>
    </route>
</routes>
