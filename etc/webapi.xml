<routes xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Webapi:etc/webapi.xsd">

    <!-- Category Service -->
    <route url="/V1/calcurates/categories-by-website/:websiteId" method="GET">
        <service class="Calcurates\Integration\Api\Catalog\CategoryManagementInterface" method="getTree" />
        <resources>
            <resource ref="Calcurates_Integration::api" />
        </resources>
    </route>

    <!-- Setting Service -->
    <route url="/V1/calcurates/shipping-settings/:websiteId" method="GET">
        <service class="Calcurates\Integration\Api\ConfigProviderInterface" method="getSettings" />
        <resources>
            <resource ref="Calcurates_Integration::api" />
        </resources>
    </route>
</routes>
